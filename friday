public class Forloop {
	public static void main(String[] args) {
  
		//initialization condition increment
		for(int i=1;  i<=10;  i=i++) {
			System.out.println(i);
		}
		
System.out.println("---------------------");

		                   //decrement
		for(int i=10; i>=1; i=i++) {
			System.out.println(i);
		}	
System.out.println("---------------------");

		                   //decrement
		for(int i=10; i>=1; i=--) {
			System.out.println(i);
		}			
	}
}
